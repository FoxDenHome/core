bar {
    status_command i3status
}

for_window [shell="xwayland"] title_format "[XWayland] %title"
for_window [app_id="foot"] floating enable
for_window [app_id="foot"] title_format "[Terminal] %title"

output eDP-1 scale 1.5
output eDP-1 transform 270

exec swayidle -w \
	timeout 900 'swaymsg "output * power off"' \
		resume 'swaymsg "output * power on"'
exec nm-applet
exec carvera-controller-community
exec wayvnc -r ::

set $mod super
bindsym $mod+t exec foot
